{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "2.2.2",
  "author": "YUKI \"Piro\" Hiroshi",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "https://www.google.com/s2/favicons?*",
    "activeTab",
    "bookmarks",
    "search",
    "storage"
  ],
  "icons": {
    "16": "/resources/16x16.svg",
    "32": "/resources/32x32.svg"
  },
  "background": {
    "scripts": [
      "/common/constants.js",
      "/extlib/Configs.js",
      "/common/common.js",
      "/common/permissions.js",
      "/extlib/ShortcutCustomizeUI.js",
      "/background/background.js"
    ]
  },
  "browser_action": {
    "default_title": "__MSG_panelTitle__",
    "default_icon": {
      "16": "/resources/16x16.svg",
      "32": "/resources/32x32.svg"
    },
    "browser_style": true,
    "default_popup": "panel/panel.html",
    "theme_icons": [
      {
        "light": "/resources/16x16-dark.svg#toolbar",
        "dark":  "/resources/16x16-light.svg#toolbar",
        "size": 16
      },
      {
        "light": "/resources/32x32-dark.svg#toolbar",
        "dark":  "/resources/32x32-light.svg#toolbar",
        "size": 32
      }
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "description": "__MSG_commandDescription__ (Ctrl+Shift+L)"
    }
  },
  "options_ui": {
    "page": "/options/options.html",
    "browser_style": true
  },
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "{0AE5CAA4-8BAB-11DB-AF59-ED4B56D89593}",
      "strict_min_version": "60.0"
    }
  }
}
